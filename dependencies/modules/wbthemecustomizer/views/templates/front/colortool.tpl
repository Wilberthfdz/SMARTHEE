    <div class="wbopen-closeclr wbclrdisable"><a href="javascript:void(0)"></a></div>
    <div class="wbcolor_box">
    <h2 class="wbcolor_title">{l s='Live Settings' mod='wbthemecustomizer'}</h2>
    
    <div class="wbcolor_option">
        <div class="wbcolor_tblbox">
            <h6>{l s='Theme Color' mod='wbthemecustomizer'}</h6>
            <div class="wbcolor_allclr">
            <div class="wbcolor_field">
                <div class="wbcolorp1 wbcolorpart"><a href="javascript:void(0)" id="FF5722_000000" title="Color"><span class="wbcolor1"></span><span class="wbcolor2"></span>{l s='Color 1' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp2 wbcolorpart"><a href="javascript:void(0)" id="4e7df1_000000" title="Color"><span class="wbcolor3"></span><span class="wbcolor4"></span>{l s='Color 2' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp1 wbcolorpart"><a href="javascript:void(0)" id="6A1B9A_000000" title="Color"><span class="wbcolor5"></span><span class="wbcolor6"></span>{l s='Color 3' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp2 wbcolorpart"><a href="javascript:void(0)" id="00B8D4_000000" title="Color"><span class="wbcolor7"></span><span class="wbcolor8"></span>{l s='Color 4' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp1 wbcolorpart"><a href="javascript:void(0)" id="8BC34A_000000" title="Color"><span class="wbcolor9"></span><span class="wbcolor10"></span>{l s='Color 5' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp2 wbcolorpart"><a href="javascript:void(0)" id="FFA000_000000" title="Color"><span class="wbcolor11"></span><span class="wbcolor12"></span>{l s='Color 6' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp1 wbcolorpart"><a href="javascript:void(0)" id="ad0202_000000" title="Color"><span class="wbcolor13"></span><span class="wbcolor14"></span>{l s='Color 7' mod='wbthemecustomizer'}</a></div>
            </div>

            <div class="wbcolor_field">
                <div class="wbcolorp2 wbcolorpart"><a href="javascript:void(0)" id="3026a7_000000" title="Color"><span class="wbcolor15"></span><span class="wbcolor16"></span>{l s='Color 8' mod='wbthemecustomizer'}</a></div>
            </div>

            </div>
            <div class="clearfix"></div><hr>
            <div class="wbcolor_field">{l s='Box Layout' mod='wbthemecustomizer'}</div>
            <div class="wbcolor_field wbcolor_field-mode">
                <div class="wbbox-layout"><label for="wbboxclr"><input id="wbboxclr" type="radio" name="wbcolor_input" value="box"/>{l s='Box' mod='wbthemecustomizer'}</label></div><div class="wbfull-layout"><label for="wbfullclr"><input id="wbfullclr" type="radio" name="wbcolor_input" value="wide"/>{l s='Wide' mod='wbthemecustomizer'}</label></div>
            </div><hr>

            <div class="wbcolor_field">{l s='Favourite Color' mod='wbthemecustomizer'}</div>
            <div class="wbfavcolor">
                <div class="wbcolor_field wbcolor_field-background">
                    <div class="wbcolorp2">
                        <div class="wbcolor_custom" id="backgroundColor">
                                <div style="background-color: {$WB_mainColorScheme}"></div>
                        </div>
                    </div> 
                    <div class="wbcolorp1">{l s='Main Color' mod='wbthemecustomizer'}</div>
                </div>
                <div class="wbcolor_field wbcolor_field-link">
                    <div class="wbcolorp2">
                        <div class="wbcolor_custom" id="hoverColor">
                                <div style="background-color: {$WB_activeColorScheme}"></div>
                        </div>
                    </div>
                    <div class="wbcolorp1">{l s='Sub Color' mod='wbthemecustomizer'}</div>
                </div>
            </div>
            <div class="wbcolor_field wbclrreset">
                <span class="wbcolor_reset btn btn-primary">{l s='Reset' mod='wbthemecustomizer'}</span>
            </div>
        </div>
    </div>
</div>
</div>
